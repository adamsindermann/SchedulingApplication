<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" maxHeight="600.0" maxWidth="1000.0" minHeight="600.0" minWidth="1000.0" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.DashboardController">
   <children>
      <TabPane layoutX="50.0" layoutY="50.0" minHeight="500.0" minWidth="900.0" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab fx:id="appTab" text="Appointments">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="appointmentView" layoutY="36.0" maxHeight="400.0" maxWidth="750.0" minHeight="400.0" minWidth="900.0" prefHeight="400.0" prefWidth="750.0">
                           <columns>
                              <TableColumn fx:id="appIDCol" prefWidth="44.0" text="ID" />
                              <TableColumn fx:id="appTitleCol" prefWidth="106.0" text="Title" />
                              <TableColumn fx:id="appTypeCol" prefWidth="82.0" text="Type" />
                              <TableColumn fx:id="appDescCol" prefWidth="192.0" text="Description" />
                              <TableColumn fx:id="appLocationCol" prefWidth="108.0" text="Location" />
                              <TableColumn fx:id="appContactCol" prefWidth="72.0" text="Contact ID" />
                              <TableColumn fx:id="appStartCol" prefWidth="111.0" text="Start Time" />
                              <TableColumn fx:id="appEndCol" prefWidth="104.0" text="End Time" />
                              <TableColumn fx:id="appCustIDCol" text="Customer ID" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <Label layoutY="15.0" text=" Upcoming Appointments">
                           <font>
                              <Font name="System Bold Italic" size="14.0" />
                           </font>
                        </Label>
                        <RadioButton fx:id="monthRadio" layoutX="843.0" layoutY="16.0" mnemonicParsing="false" text="Month" />
                        <RadioButton fx:id="weekRadio" layoutX="780.0" layoutY="16.0" mnemonicParsing="false" text="Week" />
                        <RadioButton fx:id="allRadio" layoutX="735.0" layoutY="16.0" mnemonicParsing="false" text="All" />
                        <Button fx:id="newAppButton" layoutX="860.0" layoutY="445.0" mnemonicParsing="false" text="New" />
                        <Button fx:id="editAppButton" layoutX="813.0" layoutY="445.0" mnemonicParsing="false" text="Edit" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab fx:id="custTab" text="Customers">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="customerView" layoutY="36.0" maxHeight="400.0" maxWidth="750.0" minHeight="400.0" minWidth="900.0" prefHeight="400.0" prefWidth="750.0">
                           <columns>
                              <TableColumn fx:id="custIDCol" prefWidth="44.0" text="ID" />
                              <TableColumn fx:id="custNameCol" prefWidth="183.0" text="Name" />
                              <TableColumn fx:id="custAddressCol" prefWidth="274.0" text="Address" />
                              <TableColumn fx:id="custZipCol" prefWidth="127.0" text="Postal Code" />
                              <TableColumn fx:id="custStateCol" prefWidth="117.0" text="State/Territory" />
                              <TableColumn fx:id="custCountryCol" prefWidth="154.0" text="Country" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <Button fx:id="newCustButton" layoutX="860.0" layoutY="445.0" mnemonicParsing="false" text="New" />
                        <Button fx:id="editCustButton" layoutX="813.0" layoutY="445.0" mnemonicParsing="false" text="Edit" />
                        <Label layoutY="14.0" text=" All Customers">
                           <font>
                              <Font name="System Bold Italic" size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
